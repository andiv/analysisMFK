\begin_inset Formula 
\begin{align*}
\TT_{p}^{r_{1},s_{1}}\otimes\TT_{p}^{r_{2},s_{2}} & =\underbrace{\TT_{p}M\otimes\ldots\otimes\TT_{p}M}_{r_{1}}\otimes\underbrace{\TT_{p}^{*}M\otimes\ldots\otimes\TT_{p}^{*}M}_{s_{1}}\otimes\\
 & \quad\otimes\underbrace{\TT_{p}M\otimes\ldots\otimes\TT_{p}M}_{r_{2}}\otimes\underbrace{\TT_{p}^{*}M\otimes\ldots\otimes\TT_{p}^{*}M}_{s_{2}}=\\
 & =\TT_{p}^{r_{1}+r_{2},s_{1}+s_{2}}M
\end{align*}

\end_inset

