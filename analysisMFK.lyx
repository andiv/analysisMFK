\TT^{r_{1},s_{1}}M\times\TT^{r_{s},s_{2}}M & \twoheadrightarrow\TT^{r_{1}+r_{2},s_{1}+s_{2}}M\\
\left(A_{j_{1}\ldots j_{s_{1}}}^{i_{1}\ldots i_{r_{1}}},B_{l_{1}\ldots l_{s_{2}}}^{k_{1}\ldots k_{r_{2}}}\right) & \mapsto A_{j_{1}\ldots j_{s_{1}}}^{i_{1}\ldots i_{r_{1}}}B_{l_{1}\ldots l_{s_{2}}}^{k_{1}\ldots k_{r_{2}}}
\end{align*}

\end_inset

induziert eine Abbildung:
\begin_inset Formula 
\begin{align*}
\TT^{r_{1},s_{1}}M\otimes\TT^{r_{s},s_{2}}M & \stackrel{\sim}{\to}\TT^{r_{1}+r_{2},s_{1}+s_{2}}M
\end{align*}

\end_inset

